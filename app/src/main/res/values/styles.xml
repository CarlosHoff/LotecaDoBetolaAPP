<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="container_components_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/view_container_background</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="container_components_cadastro_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">410dp</item>
        <item name="android:background">@drawable/view_container_background</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="container_components_jogo_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">410dp</item>
        <item name="android:background">@drawable/view_container_background</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_cadastrar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/botao_cadastrar</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="container_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="button_jogo_style" parent="container_button">
        <item name="android:background">@drawable/botao_clicado</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="container_list_button">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="button_jogo_liststyle" parent="container_list_button">
        <item name="android:background">@drawable/shape_botao_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="card_view_style">
        <item name="background">@drawable/card_view_shape</item>
    </style>

    <style name="botao_apost_view_style">
        <item name="android:layout_width">33dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

</resources>